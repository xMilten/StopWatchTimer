<Window x:Class="SMWTimer.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SMWTimer"
        mc:Ignorable="d"
        Title="ConfigWindow" Height="228" Width="418"
        Closed="Window_Closed">
    <Grid Background="Gray" MouseDown="Grid_MouseDown" MouseRightButtonDown="Grid_MouseRightButtonDown" Name="mainGrid" Focusable="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="166"/>
            <ColumnDefinition Width="26"/>
            <ColumnDefinition />
            <ColumnDefinition Width="26"/>
            <ColumnDefinition />
            <ColumnDefinition Width="26"/>
            <ColumnDefinition />
            <ColumnDefinition Width="26"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBox Grid.Row="0" Grid.Column="0" Margin="8, 6, 8, 6" TextAlignment="{ Binding HackTitle }" x:Name="tbHackTitle"></TextBox>
        <Button Grid.Row="0" Grid.Column="1" Width="20" Height="20" HorizontalAlignment="Left" FontWeight="Bold">A|</Button>
        <TextBox Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="5" Margin="8, 6, 8, 6" TextAlignment="Center" x:Name="tbHack"></TextBox>
        <Button Grid.Row="0" Grid.Column="7" Width="20" Height="20" HorizontalAlignment="Left" FontWeight="Bold">A|</Button>

        <TextBox Grid.Row="1" Grid.Column="0" Margin="8, 6, 8, 6" TextAlignment="Center" x:Name="tbAuthorTitle"></TextBox>
        <Button Grid.Row="1" Grid.Column="1" Width="20" Height="20" HorizontalAlignment="Left" FontWeight="Bold">A|</Button>
        <TextBox Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="5" Margin="8, 6, 8, 6" TextAlignment="Center" x:Name="tbAuthor"></TextBox>
        <Button Grid.Row="1" Grid.Column="7" Width="20" Height="20" HorizontalAlignment="Left" FontWeight="Bold">A|</Button>

        <TextBox Grid.Row="2" Grid.Column="0" Margin="8, 6, 8, 6" TextAlignment="Center" x:Name="tbExitTitle"></TextBox>
        <Button Grid.Row="2" Grid.Column="1" Width="20" Height="20" HorizontalAlignment="Left" FontWeight="Bold">A|</Button>
        <TextBox Grid.Row="2" Grid.Column="2" Margin="8, 6, 8, 6" TextAlignment="Center" x:Name="tbExitCurrent"></TextBox>
        <Button Grid.Row="2" Grid.Column="3" Width="20" Height="20" HorizontalAlignment="Left" FontWeight="Bold">A|</Button>
        <TextBox Grid.Row="2" Grid.Column="4" Margin="8, 6, 8, 6" TextAlignment="Center" x:Name="tbExitSeparator"></TextBox>
        <Button Grid.Row="2" Grid.Column="5" Width="20" Height="20" HorizontalAlignment="Left" FontWeight="Bold">A|</Button>
        <TextBox Grid.Row="2" Grid.Column="6" Margin="8, 6, 8, 6" TextAlignment="Center" x:Name="tbExitMax"></TextBox>
        <Button Grid.Row="2" Grid.Column="7" Width="20" Height="20" HorizontalAlignment="Left" FontWeight="Bold">A|</Button>

        <TextBox Grid.Row="3" Grid.Column="0" Margin="8, 6, 8, 6" TextAlignment="Center" x:Name="tbLevelTimeTitle"></TextBox>
        <Button Grid.Row="3" Grid.Column="1" Width="20" Height="20" HorizontalAlignment="Left" FontWeight="Bold">A|</Button>
        <TextBox Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="5" Margin="8, 6, 8, 6" TextAlignment="Center" x:Name="tbLevelTime"></TextBox>
        <Button Grid.Row="3" Grid.Column="7" Width="20" Height="20" HorizontalAlignment="Left" FontWeight="Bold">A|</Button>

        <TextBox Grid.Row="4" Grid.Column="0" Margin="8, 6, 8, 6" TextAlignment="Center" x:Name="tbHackTimeTitle"></TextBox>
        <Button Grid.Row="4" Grid.Column="1" Width="20" Height="20" HorizontalAlignment="Left" FontWeight="Bold">A|</Button>
        <TextBox Grid.Row="4" Grid.Column="2" Grid.ColumnSpan="5" Margin="8, 6, 8, 6" TextAlignment="Center" x:Name="tbHackTime"></TextBox>
        <Button Grid.Row="4" Grid.Column="7" Width="20" Height="20" HorizontalAlignment="Left" FontWeight="Bold">A|</Button>

        <Button Grid.Row="5" Grid.Column="0" HorizontalAlignment="Left" Margin="8, 0, 0, 0" Grid.ColumnSpan="2" Width="58" Height="24" Click="ButtonHotkeys_Click">
            <Image Source="pack://application:,,,/Assets/Hotkey_Icon.png" />
        </Button>
        <Button Grid.Row="5" Grid.Column="4" HorizontalAlignment="Right" Grid.ColumnSpan="2" Width="58" Height="24" Click="ButtonOK_Click">OK</Button>
        <Button Grid.Row="5" Grid.Column="6" HorizontalAlignment="Right" Margin="0, 0, 8, 0" Grid.ColumnSpan="2" Width="58" Height="24" Click="ButtonCancel_Click">Cancel</Button>
    </Grid>
</Window>
